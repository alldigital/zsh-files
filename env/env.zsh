#
# Env Variables
#

# Config dir
export XDG_CONFIG_HOME=$HOME/.config

#
# OS Specific Env Variables
#

# Ensure languages are set
export LANG=en_US.UTF-8
export LANGUAGE=en_US.UTF-8
